\mode<presentation>

\newif\ifbeamer@secheader
\beamer@secheaderfalse

\DeclareOptionBeamer{secheader}{\beamer@secheadertrue}
\ProcessOptionsBeamer

\useoutertheme{seegrid}

% color definitions
\definecolor{seegridblue}{HTML}{24629E}
\definecolor{seegridbrightblue}{HTML}{0082CD}
\definecolor{seegridgreen}{HTML}{78AF8F}
\definecolor{black}{RGB}{0, 0, 0}

% set the title color
\setbeamercolor{title}{fg=seegridbrightblue}
\setbeamercolor{titlelike}{fg=seegridbrightblue}
\setbeamercolor{title in head/foot}{fg=seegridblue}
\setbeamercolor{author}{fg=seegridblue}
\setbeamercolor{block}{fg=seegridred,bg=seegridyellow}
\setbeamercolor{block title}{fg=seegridblue,bg=seegridred}
\setbeamercolor{block body}{fg=black,bg=seegridyellow}
\setbeamercolor{enumerate item}{fg=seegridbrightblue}
\setbeamercolor{itemize item}{fg=seegridbrightblue}
\setbeamercolor{description item}{fg=seegridblue}
\setbeamercolor{beamerstructure}{fg=seegridbrightblue}

\setbeamercolor{section in toc}{fg=seegridblue}

\setbeamercolor{section in footer}{fg=white,bg=seegridblue}
\setbeamercolor{subsection in footer}{fg=white,bg=seegridblue}
\setbeamercolor{pagenumber in footer}{fg=white,bg=seegridblue}

\setbeamerfont{title}{size=\Huge,series=\bfseries}
\setbeamerfont{subtitle}{size=\large,series=\bfseries}

% frame title styling
\setbeamerfont{frametitle}{size=\LARGE,series=\bfseries}
\setbeamertemplate{frametitle}{\vspace{0.4cm} \color{black}  \insertframetitle}

% general styling
\setbeamertemplate{navigation symbols}{} %no nav symbols
\setbeamertemplate{blocks}[rounded]
\usefonttheme{structurebold}

\setbeamertemplate{title page}
{\begin{center}
        \vspace{1cm}
        \inserttitlegraphic\par
        \vspace{0.4cm}
        {
        \vspace{0.3cm}
        \usebeamerfont{title}
        \usebeamercolor[fg]{title}
        \inserttitle\par
        \vspace{0.1cm}
        \usebeamerfont{subtitle}
        \usebeamercolor[fg]{subtitle}
        \insertsubtitle
        }\par
        \vspace{1ex}
        {\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor}\par
        \insertdate\par
        \vspace{1cm}
        \includegraphics[width=3cm]{seegrid_logo.png}
    \end{center}
}

\usesubitemizeitemtemplate{%
    \tiny\raise1.5pt\hbox{\color{beamerstructure}$\blacktriangleright$}%
}
\usesubsubitemizeitemtemplate{%
    \tiny\raise1.5pt\hbox{\color{beamerstructure}$\bigstar$}%
}


\setbeamersize{text margin left=1em,text margin right=1em}
\setbeamersize{frametitle=\huge}

\ifbeamer@secheader\else\setbeamertemplate{headline}[default]\fi

\mode
<all>
