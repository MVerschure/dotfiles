"3.16.0 (created: 2017/02/01 00:55:15)

source! ~/.vimperatorrc.local

" vim: set ft=vimperator:
set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
set tabnumbers
set noerrorbells
set statuslinevisibility=hidden
colorscheme seaweed

" I don't like the way vimperator moves through history
nmap > :forward<CR>
nmap < :back<CR>

" or tabs
nmap <A-left> gT
nmap <A-right> gt

" remap of d so that I don't accidentally close tabs
map d <Nop>
nmap dd :tabclose<CR>
nmap DD :tabclose!<CR>

" some search shortcuts
map w <Nop>
nmap w :open wikipedia 
map W <Nop>
nmap W :tabopn wikipedia 
map s <Nop>
nmap s :open google 
nmap S :tabopen google 

" Pass through all keys (like CTRL-Z) on GMail, GReader, GTaks, and GCalendar:"
" Libly must be loaded before other plugins
source ~/.vimperator/plugin/_libly.js
command! -nargs=+ lazy autocmd VimperatorEnter .* <args>
lazy fmaps -u='mail.google.com/mail' c / j k n p o u e x s r a # [  ] ? gi gs gt gd ga gc y
lazy fmaps -u='mail\.google\.com/mail/.*/[0-9a-f]+$' c / j,n k,p n,j p,k o u e x s r a # [  ] ? gi gs gt gd ga gc
lazy fmaps -u='github\.com/[^/]+/.+' -events=vkeydown s,t gc gi gp gw
lazy fmaps -u='duckduckgo\.com/\?q=' -events=vkeydown l j k <enter> s,d gm,m gt,t
lazy fmaps -u 'www\.google\.com/calendar -events=vkeypress j k T,t a D,d w m x c e z / + q s ?
lazy fmaps -u='calendar\.google\.com/.*' -events=vkeypress k p j n r t 1 d 2 w 3 m 4 x 5 a c e <backspace> <delete> <ctrl> z s / <shift> = + q ?
