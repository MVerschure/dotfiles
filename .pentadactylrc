"set it so we have only have the commandline status line, bottom scroll and
"right scroll
set guioptions=bCr
colorscheme solarized-dark

"google docs breaks things
":autocmd LocationChange drive.google.com :normal! <C-z>
:autocmd LocationChange docs.google.com :normal! <C-z>
:autocmd LocationChange tree.schwippy.com :normal! <C-z>
:autocmd LocationChange http://gabrielecirulli.github.io/2048/ :normal! <C-z>
:autocmd LocationChange skyscanner.com :normal! <C-z>

"pass keys to gmail
set passkeys+=mail.google.com:#y

"" scroll more
nmap -builtin j 10j
nmap -builtin k 10k

"" swap d/D
:map d <Nop>
:map dd -ex tabclose
nmap -builtin gd :js config.tabbrowser.removeTab(tabs.getTab())<CR>

"" switch between tabs
nmap -builtin <A-Left> <C-p>
nmap -builtin <A-Right> <C-n>

"" back/forward
nmap -builtin < <C-o>
nmap -builtin > <C-i>

"" prev selected tab
nmap -builtin x <C-^>

"" U list closed tabs
nmap -builtin U :undo<Space>

"" pintab
nmap -builtin ! :pintab<CR>

"" fullscreen
nmap -builtin ,F :set fullscreen!<CR>

"" Translate from english to spanish
nmap -builtin enes :tabopen en-es 

"" Translate from spanish to english
nmap -builtin esen :tabopen es-en 

"" Translate from english to italian
nmap -builtin enit :tabopen en-it 

"" Translate from italian to english
nmap -builtin iten :tabopen it-en 

"" Translate from english to german
nmap -builtin ende :tabopen en-de 

"" Translate from german to english
nmap -builtin deen :tabopen de-en 

""Google-Scholar search
nmap -builtin ,s :open scholar 
nmap -builtin ,S :tabopen scholar 

""Wikipedia search
nmap -builtin w :open wikipedia 
nmap -builtin W :tabopen wikipedia 

"" display download
nmap -builtin ,d :downloads<CR>

"" about:config
nmap -builtin ,c :tabopen about:config<CR>

nmap ru :tabopen google site:rutracker.org 
