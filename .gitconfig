[user]
    name = Erich L Foster
    email = erichlf@gmail.com
	signingkey = B052B44F7F5DB221
[core]
    editor = vim
    autocrlf = false
[push]
    default = simple
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
    helper = /usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring
[diff]
    tool = meld
[merge]
    tool = meld
[merge "tool.meld"]
    trustExitCode = true
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld -n "$LOCAL" "$REMOTE"
[alias]
    diffall = difftool -d
    diffeach = "!f(){\
                    git diff --name-only "$@" | while read filename; do git difftool "$@" --no-prompt "$filename" & done \
                }; f"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[includeIf "gitdir:~/workspace/Seegrid/"]
  path = ~/workspace/Seegrid/.gitconfig
[commit]
	gpgSign = true
